<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewmodel"
            type="com.android.mvvm.viewmodel.ProfileViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        android:background="#F2F3F8">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@drawable/bg_card"
            android:elevation="6dp"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_user"
                android:contentDescription="Profile Picture"
                android:background="@drawable/bg_profile_circle"
                android:padding="20dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Profile"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#3A3A3A"
                android:layout_marginBottom="16dp"/>

            <View
                android:layout_width="60dp"
                android:layout_height="2dp"
                android:background="#969EEE"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewmodel.user.name}"
                android:textSize="18sp"
                android:textColor="#222222"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='@{`Age: ` + String.valueOf(viewmodel.user.age)}'
                android:textSize="16sp"
                android:textColor="#555555"
                android:layout_marginBottom="16dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Load Profile"
                android:textAllCaps="false"
                android:backgroundTint="#6366F1"
                android:textColor="#FFFFFF"
                android:onClick="@{() -> viewmodel.loadUser()}"
                android:paddingHorizontal="32dp"
                android:paddingVertical="12dp"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </LinearLayout>
</layout>
